
<% if variable.array == 0 %>

<h1> <%= variable.name %> </h1>
<%= variable.name %> = <%=variable.expression_string %>
<% end %>
 
<%	if variable.array?

		temp = variable.expression_string.split(/\[\s*i\s*\|\s*/)[1]
		truncated_array = temp[0..-2]
		comma_separated_array = truncated_array.split(/\s*,\s*/)
		num = comma_separated_array.size()
%>
	<div id = "full_array">
	
<h1> <%= variable.name %> </h1>
		<table>
		<th> index </th>
		<% for k in 1..10 %>
				<th> <%= k %> </th>
		<% end %>
		<% i = 0
		while i < num %>
			<tr>
			<td id ="col_header"> <%= i %> </td>
			<% for j in 1..10 %>
				<td>
				<%=comma_separated_array[i+j] %>
				</td>
			<% end %>
			</tr>
	<% i+=10;
		end 
	%>
	</table>
	</div>
<% end %>


