<h1>Models</h1>

<table cellpadding="0" cellspacing="0" class="tablesorter" id = "variables_table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th><!--Show Button--></th>
			<th><!--Edit Button--></th>
			<th><!--Destroy Button--></th>
		</tr>
	</thead>

	<tbody>
		<% @models.each do |model| %>
			<tr>
				<td><%= model.name %></td>
				<td><%= model.description %></td>
				<td><%= button_to 'Show', model, :method => :get %></td>
				<td><%= button_to 'Edit', edit_model_path(model), :method => :get %></td>
				<td><%= button_to 'x', model, :confirm => 'Are you sure you want to delete this model and all its associated data, including variables and relations? This cannot be undone...', :method => :delete %></td>
			</tr>
		<% end %>
	</tbody>  
</table>

 <%= form_for(:new, :method => :get,  :url=>"/models/new") do |f| %>
	<div id="input_button">
		<%= f.submit("New Model", :class => "button") %>
	</div>
 <% end %>
 
	
