
<h3>Current Variables</h3>
 
<table cellpadding="0" cellspacing="0" class="tablesorter">
<thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
	<th>Relationship</th>
	<th></th>
  </tr>
</thead>
<tbody>
  <% for variable in @variables %>
    <tr>
        <td><%= variable.name %> </td>
        <td><%= variable.description %></td>
		<td><%= variable.variable_type_string %>
		<td><%= variable.name %> = <%= variable.expression_string %></td>
		<td align="center">
		<%= button_to "x", "#{delete_relationship_path}?id=#{variable.id}",
		{:confirm => "Are you sure you want to delete the relationship for the variable named #{variable.name}?",
          :method => :delete} %>
		</td> 
    </tr>
  <% end %>
</tbody>  
</table>
