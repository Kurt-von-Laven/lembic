
<h3>Current Variables</h3>

<table cellpadding="0" cellspacing="0" class="tablesorter">
<thead>
  <tr>
    <th>Name</th>
  </tr>
</thead>
<tbody>
  <% for variable in @variables %>
    <tr>
		<% 
		description = variable.description
		myString = variable.name + 
		 " | " + description + " | " + variable.variable_type_string	+  " | " +
		 truncate(variable.expression_string, :length =>17, :omission => '...(continued)')	%>
		 
        <td onClick="alert('<%= myString %>')"><%= variable.name %> </td>
    </tr>
  <% end %>
</tbody>  
</table>
