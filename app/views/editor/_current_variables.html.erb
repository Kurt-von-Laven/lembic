
<h3>Current Variables</h3>
 
<table cellpadding="0" cellspacing="0">
  <tr>
    <th>Name</th>
    <th>Description</th>
	<th>Array?</th>
    <th>Type</th>
	<th>Relationship</th>
	<th></th>
  </tr>
  
  <% for variable in @variables %>
    <tr>
      <td><%= variable.name %> </td>
      <td><%= variable.description %></td>
      
      <% if variable.array == 0 %>
        <td>No</td>
      <% elsif variable.array == 1 %>
         <td>Yes</td>
      <% end %>
      
      <td><%= variable.variable_type_string %></td>
      <td><%= variable.expression_string %></td>
      
      <td class="delete">
        <form method="post" action="<%= "#{delete_variable_path}?id=#{variable.id}" %>" >
          <div>
            <input type="hidden" value="delete" name="_method">
            <button class="ui-button ui-button-icon-only ui-widget
                                     ui-state-default ui-corner-all" title="Delete Variable" type="submit" 
                          data-confirm="Are you sure you want to delete the variable <%= variable.name %>?">
              <span class="ui-button-icon-primary ui-icon ui-icon-close"></span>
              <span class="ui-button-text">Delete Variable</span>
            </button>
          </div>
        </form>
      </td>
    </tr>
  <% end %>
  
</table>
