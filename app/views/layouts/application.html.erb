<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= @title %></title>

      <%= javascript_include_tag "jquery-ui-1.8.20.custom.min" %>
    <%= javascript_include_tag "jquery-1.7.2.min" %>
    <%= javascript_include_tag "application" %>
    <%= stylesheet_link_tag     "jquery-ui-1.8.20.custom", :media => "all" %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    
    <script type="text/javascript">
            
			$(function(){

				// Accordion
				$("#accordion").accordion({ header: "h3" });

				// Tabs
				$('#tabs').tabs();

				// Dialog
				$('#dialog').dialog({
					autoOpen: false,
					width: 600,
					buttons: {
						"Ok": function() {
							$(this).dialog("close");
						},
						"Cancel": function() {
							$(this).dialog("close");
						}
					}
				});

				// Dialog Link
				$('#dialog_link').click(function(){
					$('#dialog').dialog('open');
					return false;
				});

				// Datepicker
				$('#datepicker').datepicker({
					inline: true
				});
                
                $( "#format" ).change(function() {
                    $( "#datepicker" ).datepicker( "option", "dateFormat", $( this ).val() );
                });
                
                $("#hide").click(function(){
                    $("#hello").toggle();
                });

				// Slider
				$("#slider").slider({
					range: true,
					values: [17, 67]
				});
                
                // Range Slider
                $( "#slider-range" ).slider({
                    range: true,
                    min: 0,
                    max: 24,
                    values: [ 9, 17 ],
                    slide: function( event, ui ) {
                        $( "#time" ).val( ui.values[ 0 ] + " - " + ui.values[ 1 ]);
                    }
                });
                
                $( ".button" ).button();
                
                $( "#time" ).val( $( "#slider-range" ).slider( "values", 0 ) +
                    " - " + $( "#slider-range" ).slider( "values", 1 ));

				// Progressbar
				$("#progressbar").progressbar({
					value: 20
				});

				//hover states on the static widgets
				$('#dialog_link, ul#icons li').hover(
					function() { $(this).addClass('ui-state-hover'); },
					function() { $(this).removeClass('ui-state-hover'); }
				);

			});

		</script>
      

        
    <%= csrf_meta_tags %>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  </head>
  <body>
    
    <div id="logo">
      <%= image_tag "lembic_blue.png" %>
    </div>
    <div id="container">
      <ul id="menu">
          <li><%= link_to "Home",  home_path, {:style=>'color:#dee6ed;', :class => "css_class"} %></li>
          <li><%= link_to "Help", help_path, {:style=>'color:#dee6ed;', :class => "css_class"} %></li>
          <li><%= link_to "Equation Editor", equations_path, {:style=>'color:#dee6ed;', :class => "css_class"} %></li>
          <li><%= link_to "View Editor", editblock_path, {:style=>'color:#dee6ed;', :class => "css_class"} %></li>
          <li><%= link_to "Evaluator", evaluator_path, {:style=>'color:#dee6ed;', :class => "css_class"} %></li>
          <% if User.where(:id => session[:user_id]).empty? %>
            <li><%= link_to "Login", login_path, {:style=>'color:#dee6ed;', :class => "css_class"} %></li>
          <% else %>
            <li><%= link_to "Logout", logout_path, {:style=>'color:#dee6ed;', :class => "css_class"} %></li>
          <% end %>
        </ul>
      <div id="content">
        <%= yield %>
      </div>
    </div>
  </body>
  
</html>
